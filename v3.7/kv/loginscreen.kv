<LoginScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("643e64")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("643e64")
            Rectangle:
                size: self.size
                pos: self.pos
        TextInput:
            id: usuario
            hint_text: "Usu√°rio"
            size_hint: .4, .07
            pos_hint: {"top": .7, "right" :.7}
            on_text:
                self.focus = not self.focus if self.text.endswith("\n") else self.focus
               

        TextInput:
            id: senha
            password: True
            hint_text: "Senha"
            size_hint: .4, .07
            pos_hint: {"top": .6, "right" :.7}
            on_text:
                self.focus = not self.focus if self.text.endswith("\n") else self.focus
        
        ImageButton:
            source: "icones/entrar.png"
            size_hint: .2, .2
            pos_hint: {"top": .3, "right": .6}
            on_release:app.login()
                

        ImageButton:
            source: "icones/logo.png"
            size_hint: .2, .2
            pos_hint: {"top": 1, "right": 1}
            
        
        Label:
            id: login_message
            color: (1,0,0,1)
            font_size: 20
            size_hint: .8, .1
            pos_hint: {"top": .9, "right" :.9}
        

