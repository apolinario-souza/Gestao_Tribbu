
<IncomeScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("643e64")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("643e64")
            Rectangle:
                size: self.size
                pos: self.pos


	
#########  Items #######
		GridLayout:
			cols: 5
			rows: 3
			pos_hint: {"top": .7, "right": .5}
			size_hint: .3, .20
						
			padding: -150, 10
			 
			                 
			Label:
				text: ""
			
			Label:
				text: "1ยบ"		
											
			Label:
				text: "2ยบ"
			Label:
				text: "3ยบ"
			Label:
				text: "4ยบ"
			Label:
				text: "Quant. Delivery"
			
			
			TextInput:
				id: add_quantdelivery1_input
				halign: 'center'
			
			TextInput:
				id: add_quantdelivery2_input
				halign: 'center'					
			
			TextInput:
				id: add_quantdelivery3_input
				halign: 'center'
						
			TextInput:
				id: add_quantdelivery4_input
				halign: 'center'
			
			Label:
				text: "Faturamento"			
			
			TextInput:
				id: add_faturamento1_input
				halign: 'center'
										
			TextInput:
				id: add_faturamento2_input
				halign: 'center'
				
			
			TextInput:
				id: add_faturamento3_input
				halign: 'center'
			TextInput:
				id: add_faturamento4_input
				halign: 'center'
						
							
		        	   
			        
            
	ImageButton:
		source: "icones/adicionar.png"
		size_hint: .2, .1
		pos_hint: {"top": .6, "right": .9}
		
		on_release: app.add_items_income ("add_quantdelivery1_input", "add_quantdelivery2_input", "add_quantdelivery3_input", "add_quantdelivery4_input",  "add_faturamento1_input", "add_faturamento2_input", "add_faturamento3_input", "add_faturamento4_input")
	
	
	ImageButton:
		source: "icones/pesquisar.png"
		size_hint: .2, .1
		pos_hint: {"top": .4, "right": .9}
		on_release: app.get_items_income ("add_quantdelivery1_input", "add_quantdelivery2_input", "add_quantdelivery3_input", "add_quantdelivery4_input",  "add_faturamento1_input", "add_faturamento2_input", "add_faturamento3_input", "add_faturamento4_input")
	
	
	ImageButton:
		source: "icones/voltar.png"
		size_hint: .2, .1
		pos_hint: {"top": .2, "right": .9}
		on_release: app.change_screen('home_screen')
       


#########  Months #######        
              
	Button:
		id: btn_months
		background_color: "FF335B"
		font_size: 12
		size: 40, 25
		pos_hint: {"top": 1, "right": .7}
		size_hint: None, None
		text: ''
		
		on_release: dropdown_months.open(self)
		
				
		
	

	
