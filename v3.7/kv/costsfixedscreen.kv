
<CostsFixedScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("643e64")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("643e64")
            Rectangle:
                size: self.size
                pos: self.pos


	
#########  Items #######
		GridLayout:
			cols: 2
			rows: 12
			pos_hint: {"top": .7, "right": .35}
			size_hint: .1, .60
						
			padding: -130, -20
			 
			                 
			
			Label:
				text: "Água"							
			TextInput:
				id: add_agua_input
				halign: 'center'
							
			
			Label:
				text: "Energia"
			TextInput:
				id: add_energia_input
				halign: 'center'
									
			Label:
				text: "Aluguel"
			TextInput:
				id: add_aluguel_input
				halign: 'center'						
			
			Label:
				text: "Internet"
			TextInput:
				id: add_internet_input
				halign: 'center'
				
			Label:
				text: "INSS"
			TextInput:
				id: add_inss_input
				halign: 'center'
				
			Label:
				text: "FGTS"
			TextInput:
				id: add_fgts_input
				halign: 'center'
				
			Label:
				text: "Simples Nacional"				
			TextInput:
				id: add_simples_input
				halign: 'center'
				
			Label:
				text: "Honorários Contabilidade"
			TextInput:
				id: add_honorarios_input
				halign: 'center'
							
			Label:
				text: "Salário Funcionários"
			TextInput:
				id: add_salario_input
				halign: 'center'
				
			
			Label:
				text: "Folgistas"
			TextInput:
				id: add_folgistas_input
				halign: 'center'
							
			Label:
				text: "Software de Gestão"
			TextInput:
				id: add_software_input
				halign: 'center'
							
			Label:
				text: "Despesas Bancárias"
			TextInput:
				id: add_banco_input
				halign: 'center'
				
		        	   
			        
            
	ImageButton:
		source: "icones/adicionar.png"
		size_hint: .2, .1
		pos_hint: {"top": .6, "right": .9}
		
		on_release: app.add_items_fixed ("add_agua_input", "add_energia_input", "add_aluguel_input", "add_internet_input",  "add_inss_input", "add_fgts_input", "add_simples_input", "add_honorarios_input", "add_salario_input", "add_folgistas_input", "add_software_input", "add_banco_input")
	
	
	ImageButton:
		source: "icones/pesquisar.png"
		size_hint: .2, .1
		pos_hint: {"top": .4, "right": .9}
		on_release: app.get_items_fixed ("add_agua_input", "add_energia_input", "add_aluguel_input", "add_internet_input",  "add_inss_input", "add_fgts_input", "add_simples_input", "add_honorarios_input", "add_salario_input", "add_folgistas_input", "add_software_input", "add_banco_input")
	
	
	ImageButton:
		source: "icones/voltar.png"
		size_hint: .2, .1
		pos_hint: {"top": .2, "right": .9}
		on_release: app.change_screen('home_screen')
       


#########  Months #######        
              
	Button:
		id: btn_months
		background_color: "FF335B"
		font_size: 12
