
<CostsVariableScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("643e64")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("643e64")
            Rectangle:
                size: self.size
                pos: self.pos


	
#########  Items #######
		GridLayout:
			cols: 2
			rows: 14
			pos_hint: {"top": .7, "right": .35}
			size_hint: .1, .60
						
			padding: -130, -20
			 
			
			Label:
				text: "Royalties"							
			TextInput:
				id: add_royalties_input
				halign: 'center'
							
			
			Label:
				text: "Fundo propaganda"
			TextInput:
				id: add_fundo_input
				halign: 'center'
									
			Label:
				text: "Compra Açai"
			TextInput:
				id: add_acai_input
				halign: 'center'						
			
			Label:
				text: "Compra Frutas"
			TextInput:
				id: add_frutas_input
				halign: 'center'
                 				
			Label:
				text: "Compra Paletas"
			TextInput:
				id: add_paletas_input
				halign: 'center'
				
			Label:
				text: "Compra Refeições"
			TextInput:
				id: add_refeicoes_input
				halign: 'center'
				
			Label:
				text: "Compra Opcionais"				
			TextInput:
				id: add_opcionais_input
				halign: 'center'
				
			Label:
				text: "Compra Sorvetes e Açai de Pote"
				font_size:'11sp'
			TextInput:
				id: add_sorvete_input
				halign: 'center'
							
			Label:
				text: "Compra Material Limpeza"
			TextInput:
				id: add_limpeza_input
				halign: 'center'
				
			
			Label:
				text: "Compra Outras"
			TextInput:
				id: add_outras_input
				halign: 'center'
							
			Label:
				text: "Manutenção"
			TextInput:
				id: add_manutencao_input
				halign: 'center'
							
			Label:
				text: "Extras"
			TextInput:
				id: add_extras_input
				halign: 'center'
			
			Label:
				text: "Delivery"
			TextInput:
				id: add_delivery_input
				halign: 'center'
			
			Label:
				text: "Subsídio (Acrésimos)"
			TextInput:
				id: add_subsidios_input
				halign: 'center'
				
		        	   
       
            
	ImageButton:
		source: "icones/adicionar.png"
		size_hint: .2, .1
		pos_hint: {"top": .6, "right": .9}
		
		on_release: app.add_items_variable ("add_royalties_input", "add_fundo_input", "add_acai_input", "add_frutas_input",  "add_paletas_input", "add_refeicoes_input", "add_opcionais_input", "add_sorvete_input", "add_limpeza_input", "add_outras_input", "add_manutencao_input", "add_extras_input", "add_delivery_input", "add_subsidios_input")
	
	
	ImageButton:
		source: "icones/pesquisar.png"
		size_hint: .2, .1
		pos_hint: {"top": .4, "right": .9}
		on_release: app.get_items_variable ("add_royalties_input", "add_fundo_input", "add_acai_input", "add_frutas_input",  "add_paletas_input", "add_refeicoes_input", "add_opcionais_input", "add_sorvete_input", "add_limpeza_input", "add_outras_input", "add_manutencao_input", "add_extras_input", "add_delivery_input", "add_subsidios_input")
	
	ImageButton:
		source: "icones/voltar.png"
		size_hint: .2, .1
		pos_hint: {"top": .2, "right": .9}
		on_release: app.change_screen('home_screen')
       


#########  Months #######        
              
	Button:
